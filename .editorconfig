root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.go]
indent_style = tab
indent_size = 4

# 4 space indentation
[*.{yaml,yml}]
indent_style = space
indent_size = 2
